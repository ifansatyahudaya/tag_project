<div class="page-header">
  <%= link_to new_user_management_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New User
  <% end %>
    <h1>
    Listing users in
    <%= current_user.company.try(:name) %>
    Company  
    </h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Company</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @users) do |user| %>
        <td><%= link_to user.name, user_management_path(user.id) %></td>
        <td><%= user.email %></td>
        <td><%= user.role.try(:name) %></td>
        <td><%= user.company.try(:name) %></td>
        <td><%= link_to 'Edit', edit_user_management_path(user.id) %></td>
        <td><%= link_to 'Delete' %></td>
      <% end %>
    </tbody>
  </table>
</div>
