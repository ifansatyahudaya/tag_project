<div class="page-header">
  <%= link_to projects_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_project_path(@project), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show project</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @project.name %></dd>

  <dt>Description:</dt>
  <dd><%= @project.description %></dd>

  <dt>Tag:</dt>
  <% @project.tag_list.each do |p| %>
    <dd><%= link_to "##{p}", tag_projects_path(p) %></dd>
  <% end %>

  <dt>Developer:</dt>
  <dd>
    <% @project.users.each do |developer| %>
      Hi my name is <%= developer.name %> <br />
    <% end %>
  </dd>
</dl>