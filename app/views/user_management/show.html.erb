<div class="page-header">
  <%= link_to user_management_index_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-all"></span>
    Back
  <% end %>
  <%= link_to edit_user_management_path(@user), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show User</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @user.name %></dd>

  <dt>Email:</dt>
  <dd><%= @user.email %></dd>

  <dt>Role:</dt>
  <dd><%= @user.role.name %></dd>

  <dt>Company:</dt>
  <dd><%= @user.company.name %></dd>    
</dl>